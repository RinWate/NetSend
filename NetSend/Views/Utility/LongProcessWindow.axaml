<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:vm="clr-namespace:NetSend.ViewModels;assembly=NetSend"
        xmlns:ursa="https://irihi.tech/ursa"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="100" Width="250" Height="100"
        x:Class="NetSend.LongProcessWindow"
		x:DataType="vm:LongProcessWindowViewModel"
		WindowStartupLocation="CenterOwner"
		CanResize="False"
		Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">
	<StackPanel HorizontalAlignment="Center" 
				VerticalAlignment="Center">
		<ursa:LoadingIcon Classes="Large"></ursa:LoadingIcon>
		<Label Content="Пожалуйста, подождите..."></Label>
	</StackPanel>
</Window>
