<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NetSend.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450" Width="600" Height="450"
        x:Class="NetSend.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="NetSend via Windows Ping">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid Margin="5" ColumnSpacing="5" RowSpacing="5" ColumnDefinitions="*,*" RowDefinitions="auto,*,auto">
		<Grid ColumnSpacing="10" Grid.Column="0" Grid.ColumnSpan="2" 
			  ColumnDefinitions="auto, auto, auto">
			<Button Grid.Column="0" 
					Content="Сканировать"
					Command="{Binding ScanCommand}"></Button>
			<Button Grid.Column="1" 
					Content="Отправить всем"
					Command="{Binding SendAllCommand}"></Button>
			<Button Grid.Column="2" 
					Content="Отправить по адресу..."
					Command="{Binding SendCommand}"></Button>
		</Grid>
		<TextBox Grid.Column="0" 
				 Grid.Row="1"
				 Grid.ColumnSpan="2"
				 VerticalAlignment="Stretch"
				 VerticalContentAlignment="Stretch"
				 TextAlignment="Start"
				 Watermark="Сообщение..."/>
		<Label Grid.Column="0" Grid.Row="3" Content="{Binding Version}"></Label>
	</Grid>
	
</Window>
